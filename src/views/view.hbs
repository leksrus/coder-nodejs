

{{#if isLoggedIn}}
    <div class="container">
        <div class="row mt-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{user.photo}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Username: {{user.email}}</h5>
                    <p class="card-text">Firstname: {{user.firstname}}</p>
                    <p class="card-text">Lastname; {{user.lastname}}</p>
                    <p class="card-text">Address: {{user.address}}</p>
                    <p class="card-text">Age: {{user.age}}</p>
                    <p class="card-text">Phone: {{user.phone}}</p>
                    <a href="/api/users/logout" class="btn btn-primary">Logout</a>
                </div>
            </div>
        </div>
    </div>
{{else}}
<div class="container">
    <div class="row mt-5">
        <div class="col offset-md-11">
            <a class="btn btn-secondary" href="/api/users/register" role="button">Register</a>
        </div>
    </div>
    <div class="col-12 mt-5">
        <form action="/api/users/login" method="POST">
            <div class="form-group">
                <label for="username">User name</label>
                <input type="text" name="username" id="username" class="form-control my-2 mr-2" placeholder="User Name">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control my-2 mr-2" placeholder="Password">
            </div>
            <input class="btn btn-primary my-2" type="submit" value="Login">
        </form>
    </div>
</div>
{{/if}}